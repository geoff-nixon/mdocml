d277 1
d287 1
d365 8
d382 3
a384 64
	if (OP_DELETE == op || OP_UPDATE == op) {
		seq = R_FIRST;
		while (0 == (ch = (*idx->seq)(idx, &key, &val, seq))) {
			seq = R_NEXT;
			maxrec = *(recno_t *)key.data;
			if (0 == val.size && OP_UPDATE == op) {
				if (reccur >= recsz) {
					recsz += MANDOC_SLOP;
					recs = mandoc_realloc
						(recs, recsz * sizeof(recno_t));
				}
				recs[(int)reccur] = maxrec;
				reccur++;
				continue;
			}

			fn = (char *)val.data;
			for (i = 0; i < argc; i++)
				if (0 == strcmp(fn, argv[i]))
					break;

			if (i == argc)
				continue;

			sseq = R_FIRST;
			while (0 == (ch = (*db->seq)(db, &key, &val, sseq))) {
				sseq = R_NEXT;
				assert(8 == val.size);
				if (maxrec != *(recno_t *)(val.data + 4))
					continue;
				if (verb > 1)
					printf("%s: Deleted keyword: %s\n", 
						fn, (char *)key.data);
				ch = (*db->del)(db, &key, R_CURSOR);
				if (ch < 0)
					break;
			}
			if (ch < 0) {
				perror(fbuf);
				exit((int)MANDOCLEVEL_SYSERR);
			}

			if (verb)
				printf("%s: Deleted index\n", fn);

			val.size = 0;
			ch = (*idx->put)(idx, &key, &val, R_CURSOR);
			if (ch < 0) {
				perror(ibuf);
				exit((int)MANDOCLEVEL_SYSERR);
			}

			if (OP_UPDATE == op) {
				if (reccur >= recsz) {
					recsz += MANDOC_SLOP;
					recs = mandoc_realloc
						(recs, recsz * sizeof(recno_t));
				}
				recs[(int)reccur] = maxrec;
				reccur++;
			}
		}
		maxrec++;
	}
